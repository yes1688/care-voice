# GPU 測試容器 - 檢驗 GPU 訪問是否正常
FROM docker.io/library/ubuntu:22.04

# 安裝基本工具
RUN apt-get update && apt-get install -y \
    curl \
    nvidia-utils-535 \
    && rm -rf /var/lib/apt/lists/*

# 複製 GPU 測試腳本
COPY test_gpu.py /test_gpu.py
RUN chmod +x /test_gpu.py

# 設置工作目錄
WORKDIR /

# 測試 GPU 訪問
CMD ["nvidia-smi"]